<% if logged_in? %>
  <div class="button-availing">
    <%= form_for(list,
                 url: mylists_path,
                 html: { method: :post },
                 remote: true) do |f| %>
      <div><%= hidden_field_tag :list_id, list.id %></div>
      <%= f.button "便乗！", class: 'button-avail' %>
    <% end %>
  </div>
<% else %>
  <div class="button-avail">
    <%= link_to "便乗！", '#', class: 'ban' %>
  </div>
<% end %>