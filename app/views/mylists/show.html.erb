<% provide(:title, @user.name + "(@" + @user.account_id + ")さんのリスト") %>
<% provide(:og_title, @user.name + "(@" + @user.account_id + ")さんのリスト") %>
<% provide(:og_url, mylist_url(@user, @mylist)) %>

<div class="container content-mspace">
  <div class="list-text">
    <%= @mylist.list.content %>
  </div>
  <div class="list-info clear">
    <div class="list-user-count square c">
      <span class="count-num abs-left"><%= @mylist.check_count %></span>
      <span class="count-label middle-x">チェック数</span>
    </div>
    <div class="list-user-count square c">
      <span class="count-num abs-left"><%= @mylist.running_days %></span>
      <span class="count-label middle-x">継続日数</span>
    </div>
  </div>
</div>