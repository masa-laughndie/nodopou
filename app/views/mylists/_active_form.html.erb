<div class="list-active">
  <% if current_user?(user) %>
    <div class="form middle-xy">
      <div class="field-checkbox clear">
        <div class="button-checkbox">
          <% if mylist.active? %>
            <%= check_box 'mylist', 'active_' + mylist.id.to_s,
                          {checked: true}, true, false %>
          <% else %>
            <%= check_box 'mylist', 'active_' + mylist.id.to_s,
                          {}, true, false %>
          <% end %>
          <%= label_tag 'mylist_active_' + mylist.id.to_s,
                        id: "list-checkbox-" + mylist.id.to_s do %>
            <span></span>
          <% end %>
          <div class="slide"></div>
        </div>
      </div>
    </div>
  <% elsif mylist.active? %>
    <div class="active-on middle-xy c">
      <span>ON</span>
    </div>
  <% else %>
    <div class="active-off middle-xy c">
      <span>OFF</span>
    </div>
  <% end %>
</div>